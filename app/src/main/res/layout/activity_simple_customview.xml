<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <lzm.cn.riseskillproject.view.ColorTrackTextview
        android:id="@+id/color_track_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="我呵呵"
        android:textSize="16sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left_to_right"
        android:layout_margin="5dp"
        android:onClick="leftToRight"
        android:id="@+id/ltr_btn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right_to_left"
        android:layout_margin="5dp"
        android:onClick="rightToLeft"
        android:id="@+id/rtl_btn"/>

    <lzm.cn.riseskillproject.view.SimpleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        app:text="teyst-texgggtview"
        app:textColor="@color/colorAccent"
        app:textSize="18sp" />

    <lzm.cn.riseskillproject.view.QQStepView
        android:id="@+id/step_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:outerColor="@color/colorPrimary"
        app:innerColor="@color/colorAccent"
        app:bordrWidth="16dp"
        app:stepTextColor="@color/colorAccent"
        app:stepTextSize="36sp"/>

</LinearLayout>